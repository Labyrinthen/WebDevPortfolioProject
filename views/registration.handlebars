<body class="loginbody">
<!-- Registration Form -->
<h1>Registration page!</h1>

<form method="post" action="/registration" class="logindiv">
  <!-- Other registration fields -->
  <input type="text" name="un" id="un" placeholder="Username" required="required" />
  <input type="password" name="pw" id="pw" placeholder="*******" required="required" />
  <select name="role" id="role">
    <option value="user">User</option>
    <option value="admin">Admin</option>
  </select>
  <button class="loginbutton" type="submit">Register</button>
</form>
</body>