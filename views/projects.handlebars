  <body class="projectbody">
    
  <h1>My Projects</h1>

  {{#if isAdmin}}
  <a href="/projects/new" class="centered-link">
    New Project
  </a>
  {{/if}}
  
  {{#if dbError}}
      Sorry, there was a problem with the database:
      <br />
      {{theError}}
  {{else}}
 <div class="projectsdiv">
    {{#each projects}}

        <div class="projectboxframe">

          <div class="modifydeletediv">

            <form action="/projects/preview/{{pid}}" method="get">
                <input type="submit" value="Preview" class="loginbutton" class="modifydeletetext">
            </form>  
            {{#if ../isAdmin}}

              <form action="/projects/update/{{pid}}" method="get">
                <input type="submit" value="Modify"  class="modifydeletetext">
              </form>

              

              <form action="/projects/delete/{{pid}}" method="post" >
                <input type="submit" value="Delete" class="modifydeletetext">
              </form> 
            {{/if}}
            
          </div>
          <img src="{{pimgURL}}" alt="{{pimgURL}} " class="projectimg"/>
          <div class="nameyear"><p class="nameyeartext">{{pname}} ({{pyear}})</p></div>

        </div>
    {{/each}}
   </div>
  {{/if}}
  </body>
